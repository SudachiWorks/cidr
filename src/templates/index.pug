doctype html
html
  head
    meta(charset='UTF-8')
    meta(name="viewport" content="initial-scale=1, width=device-width")
    title= htmlWebpackPlugin.options.title
    style(type='text/css').
      #loader {
        display: none;
        position: fixed;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background: #fff;
        padding-top: 40px;
        text-align: center;
        z-index: 1
      }
  body
    #loader
      p Loading ...
    .container
      h1= htmlWebpackPlugin.options.title
      main#root
    script.
      document.getElementById('loader').style.display = 'block'
      window.onload = function() { document.getElementById('loader').style.display = 'none' }
